import java.util.Scanner;

public class trinity {
public static void main(String[] args) {
	Scanner scanner = new Scanner(System.in);
	System.out.println("Enter the number of star to be printed");
	int a = scanner.nextInt();
	for(int i=0;i<=a;i++) {
		System.out.println("");
		for(int j=0;j<i;j++) {
			for(int k=0;k<j-1;k++)
			System.out.println("*");	
		}
		
	}
	

	
	
	
}
}

